<%- include('../partials/header.ejs') -%>

    <h1>Add a New Flight</h1>

    <form action='/flights' method='Post' id='new-flight-form'>
        <label>Airline:
            <select name='airline' required>
                <option value='none'>--</option>
                <option value='American'>American</option>
                <option value='Southwest'>Southwest</option>
                <option value='United'>United</option>
            </select>
        </label>
        
        <label>Airport:
            <select name='airport'>
                <option value='AUS'>AUS</option>
                <option value='DFW'>DFW</option>
                <option value='DEN' selected>DEN</option>
                <option value='LAX'>LAX</option>
                <option value='SAN'>SAN</option>
            </select>
        </label>
        
        <label>Flight Number:
            <input type='number' name='flightNo' required>
        </label>
        
        <label>Departure Date:
            <input type='datetime-local' name='departs' value='<%=departsDate%>'>
        </label>
        
        <button type='submit' id='add-flight-btn'>Add Flight</button>
    </form>

    <%- include('../partials/footer.ejs') -%>